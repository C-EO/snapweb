<div class="b-banner__brand">
  <div class="b-banner__nav-item{{#if isHomeActive }} b-banner__nav-item--active{{/if}}">
    <a href="/">
      <img src="/public/images/cof.svg" height="30" width="30">
      <span>{{ name }} {{ subname }}</span>
    </a>
  </div>
</div>
<div class="b-banner__primary-nav">
  <div class="b-banner__nav-item{{#if isStoreActive }} b-banner__nav-item--active{{/if}}">
    <a href="/store">
